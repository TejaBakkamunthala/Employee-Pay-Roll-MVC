@model ModelLayer.EmployeeModel

@{
    ViewData["Title"] = "Login";

}

<h1>Login</h1>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group m-3">
                    <div class="d-flex flex-row">
                        <label asp-for="EmpId" class="control-label" style="margin-right:50px;margin-left:200px"></label>
                        <input asp-for="EmpId" class="form-control ml-5" style="margin-left:30px; margin-right:-10px;" placeholder="Enter Your Id" />
                    </div>
                    <span asp-validation-for="EmpId" class="text-danger"></span>
                </div>


                <div class="form-group m-3">
                    <div class="d-flex flex-row">
                        <label asp-for="EmpName" class="control-label" style="margin-right:30px;margin-left:200px"></label>
                        <input asp-for="EmpName" class="form-control ml-5" style="margin-left:23px; margin-right:-10px;" placeholder="Enter Your Name" />
                    </div>
                    <span asp-validation-for="EmpName" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <div>
                        <div>
                    <input type="submit" value="Login" class="btn btn-primary" style="margin-right:30px;margin-left:575px" />
                    </div>
                        </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" >Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


